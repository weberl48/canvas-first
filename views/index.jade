extends layout

block content
  h1= title
  p Welcome to #{title}
  div
    canvas(id="canvas" height="500", width="1000")
  div
    form
      label(for="shape") Choose Shape:
      select(id="shape" name="shape")
        option(id="rectangle" name="rectangle") Square
        option(id="square" name="square") Rectangle
        option(id="circle" name="circle") Circle
      label(for="color") Choose Color:
      select(id="color" name="color")
        option(id="red" name="red") Red
        option(id="blue" name="blue") Blue
        option(id="yellow" name="yellow") Yellow
      button(type="button" name="random" id="random" ) Random Output
          
